
@model ProductViewModel

<container>
    <div class="row">
        <div class="col-sm-5">
            <form asp-action="AddProductForm">
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription"></label>
                    <input asp-for="ShortDescription" class="form-control" aria-describedby="navigation-title">
                    <small class="form-text text-muted">A description for your product short enough to understand your product with one glance.</small>
                </div>
                <div class="form-group">
                    <label asp-for="LongDescription"></label>
                    <input asp-for="LongDescription" class="form-control" aria-describedby="navigation-title">
                    <small class="form-text text-muted">A detailed description of your product without length limitations.</small>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" aria-describedby="navigation-title">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" aria-describedby="navigation-title">
                    <small class="form-text text-muted">A picture of your product. Currently images cannot be uploaded from your local computer.</small>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>

                
            </form>
        </div>
        <div class="col-sm-4">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
</container>